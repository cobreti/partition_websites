  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
